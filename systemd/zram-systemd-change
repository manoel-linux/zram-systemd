echo "#################################################################"
case $selected_algorithm in
l)
compression_algorithm="lz4"
;;
z)
compression_algorithm="zstd"
;;
*)
echo "Invalid choice. Using the default algorithm (lz4)."
echo "#################################################################"
compression_algorithm="lz4"
;;
esac

