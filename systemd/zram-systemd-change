echo "#################################################################"
echo "Please enter the size with 'G' in uppercase, for example: 2G or 4G or 8G"
echo "#################################################################"
exit 1
fi

if [[ $zram_size_input == *gb ]]; then
echo "#################################################################"
echo "Please enter the size with 'G' in uppercase, for example: 2G or 4G or 8G"
echo "#################################################################"
exit 1
fi

if [[ $zram_size_input == *g ]]; then
echo "#################################################################"
echo "Please enter the size with 'G' in uppercase, for example: 2G or 4G or 8G"
echo "#################################################################"
exit 1
fi

